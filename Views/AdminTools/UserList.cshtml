@using IntranetApplication.Models.Authentication
@model IEnumerable<IntranetApplication.Models.Authentication.ApplicationUser>
@addTagHelper IntranetApplication.MyTagHelpers , IntranetApplication
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "UserList";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

<div class="container">
    <br />
    <h3>User List</h3>
    <table class="table table-sm table-bordered">
        <tr><th>User Name</th><th>Email</th><th>User Id</th><th>Roles</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Id</td>
                <td user-roles="@user.Id"></td> <!--user-roles functionality is found in MyTagHelpers-->
                <td>
                    <a class=" btn btn-primary" asp-route-id="@user.Id" asp-action="EditUser"> Edit</a>
                </td>
            </tr>
        }
    </table>
</div>
